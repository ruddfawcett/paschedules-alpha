<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag    "application", media: "all",
                                            "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notice] %>
  Notice: <%= flash[:notice] %>
<% end %>

<% if flash[:alert] %>
  Alert: <%= flash[:alert] %>
<% end %>

<%= yield %>

</body>
</html>
