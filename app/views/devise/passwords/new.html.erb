<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= render "devise/devise_error_messages" %>

  <div class="form-group"><%= f.label :email, class: "control-label" %><br />
  <%= f.email_field :email, :autofocus => true, placeholder: "Email", class: "form-control" %></div>

  <div><%= f.submit "Send me reset password instructions", class: "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
