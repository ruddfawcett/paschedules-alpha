<% provide :title, "Resend Confirmation Instructions" %>
<h2>Resend Confirmation Instructions</h2>

<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= render "devise/devise_error_messages" %>

  <div class="form-group"><%= f.label :email, class: "control-label" %><br />
  <%= f.email_field :email, :autofocus => true, placeholder: "Email", class: "form-control" %></div>

  <div><%= f.submit "Resend confirmation instructions", class: "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
